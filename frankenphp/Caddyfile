{
    order php_server before file_server
    auto_https off
    log {
        output stdout
        level DEBUG
    }
}

http://:{$PORT} {
    bind 0.0.0.0
    respond "Hello from Caddy"
    root * /app/public
    encode zstd br gzip

    log {
        format console
        level DEBUG
    }

    php_server

    file_server
}
