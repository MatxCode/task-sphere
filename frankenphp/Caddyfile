{
    order php_server before file_server
    auto_https off
    log {
        output stdout
        level DEBUG
    }
}

{$SERVER_NAME:localhost} {
    root * /app/public
    encode zstd br gzip

    # Debug: Affiche les headers reçus
    log {
        format console
        level DEBUG
    }

    php_server {
        root /app/public
        split .php
        env PATH /usr/local/bin:/usr/bin:/bin
        resolve_root_symlink
    }

    # Désactiver temporairement HTTPS pour tests
    header ?Strict-Transport-Security "max-age=0"
}